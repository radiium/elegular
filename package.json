{
  "name": "elegular",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Electron angular boilerplate",
  "homepage": "https://github.com/radiium/elegular",
  "repository": {
    "type": "git",
    "url": "https://github.com/radiium/elegular.git"
  },
  "author": {
    "name": "radiium",
    "email": "remip.dev@gmail.com",
    "url": "https://github.com/radiium"
  },
  "keywords": [
    "electron",
    "angular 6",
    "typescript"
  ],
  "private": true,
  "main": "electron.js",
  "scripts": {
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "serve": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "build:electron": "tsc -p src-electron/ && npx copyfiles --flat package.json src-electron/postcss.config.js dist/",
    "build:all": "npm run build:prod && npm run build:electron",
    "start": "npm-run-all -p serve electron:reload",
    "start:web": "npm run serve -- -o",
    "start:prod": "npm run build:prod && npm run build:electron && electron dist/",
    "electron:reload": "npm run build:electron && wait-on http-get://localhost:4200/ && electron dist/ --dev",
    "release:all": "npm run release -- -lmw",
    "release": "npm run build:all && electron-builder build --config electron-builder.yml"
  },
  "dependencies": {
    "electron-context-menu": "^0.10.0",
    "electron-json-storage": "^4.1.3",
    "electron-log": "^2.2.17",
    "electron-updater": "^3.2.3"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^7.0.0",
    "@angular-devkit/build-angular": "^0.10.5",
    "@angular/animations": "^7.0.3",
    "@angular/cdk": "^7.0.3",
    "@angular/cli": "~7.0.5",
    "@angular/common": "^7.0.3",
    "@angular/compiler": "^7.0.3",
    "@angular/compiler-cli": "^7.0.3",
    "@angular/core": "^7.0.3",
    "@angular/forms": "^7.0.3",
    "@angular/http": "^7.0.3",
    "@angular/material": "^7.0.3",
    "@angular/platform-browser": "^7.0.3",
    "@angular/platform-browser-dynamic": "^7.0.3",
    "@angular/router": "^7.0.3",
    "@mdi/font": "^3.0.39",
    "@types/jasmine": "^2.8.11",
    "@types/jasminewd2": "^2.0.6",
    "@types/node": "^10.12.5",
    "angular2-uuid": "^1.1.1",
    "codelyzer": "^4.5.0",
    "copyfiles": "^2.1.0",
    "core-js": "^2.5.4",
    "electron": "^3.0.8",
    "electron-builder": "^20.34.0",
    "electron-builder-squirrel-windows": "^20.35.0",
    "electron-icon-maker": "0.0.4",
    "electron-reload": "^1.3.0",
    "jasmine-core": "^3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "merge-stream": "^1.0.1",
    "ngx-electron": "^1.0.4",
    "npm-run-all": "^4.1.3",
    "path": "^0.12.7",
    "protractor": "^5.4.1",
    "rxjs": "^6.3.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "~3.1.6",
    "wait-on": "^3.2.0",
    "zone.js": "^0.8.26"
  }
}
